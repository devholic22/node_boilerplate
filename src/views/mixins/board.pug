mixin boards(board)
    div.board-box
        span.board-box__title
            a(href=`/boards/${board._id}`)=board.title
        span.board-box__time=board.createdAt
        span.board-box__content=board.content
        div.board-box__bottom
            if loggedInUser && board.owner._id == loggedInUser._id
                a(href="/my-profile") 
                    img(src=`${board.owner.avatarUrl}`).board-box__img
                    span.board-box__owner Writed by #{board.owner.name}
            else
                a(href=`/users/${board.owner._id}`)
                    img(src=`${board.owner.avatarUrl}`).board-box__img
                    span.board-box__owner Writed by #{board.owner.name}
            div.board-box__like-box
                form(method="POST", action=`boards/${board._id}/like`).board-box__like-form
                    button 
                        i.far.fa-heart
                button.board-box__like=board.likeOwner.length
            div.like-modal
                div.like-modal__content
                    span.modal-title like peoples
                    span.modal-close &times;
                    ul.like-modal__lists 
                        each likeOwner in board.likeOwner
                            a(href=`/users/${likeOwner._id}`)
                                div.like-modal__list
                                    img(src=`${likeOwner.avatarUrl}`).likeOwner__img
                                    li=likeOwner.name