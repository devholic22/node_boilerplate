doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Boilerplate
    body 
        span.header-title 
            a(href="/") Boilerplate
        ul.header-lists 
            if !loggedIn
                li.header-lists__list 
                    a(href="/login") Log in
                li.header-lists__list 
                    a(href="/join") Sign up
            else
                li.header-lists__list 
                    a(href="/logout") Log out
            li.header-lists__list 
                a(href="") Search
        block content