doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="/css/style.css")
        title Boilerplate
    body
        header.header 
            span.header__title 
                a(href="/") ðŸ“š Boilerplate
            ul.header__btns 
                li.header__btns--btn
                    a(href="") Search
                if !loggedIn
                    li.header__btns--btn 
                        a(href="/login") Log in
                    li.header__btns--btn 
                        a(href="/join") Sign up
                else
                    li.header__btns--btn
                        a(href="/boards/upload") Write Content
                    li.header__btns--btn--img
                        a(href=`/users/${loggedInUser._id}`)
                            img(src=`/${loggedInUser.avatarUrl}`).header__btns--img
                    li.header__btns--btn 
                        a(href="/logout") Log out
        block content