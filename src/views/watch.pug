include base
include mixins/comment
block content
    div.show-contents(data-id=board._id)
        span.show-contents__title=board.title 
        div.show-contents__profile
            a(href=`/users/${board.owner._id}`)
                img.show-contents__img(src=`/${board.owner.avatarUrl}`)
                span.show-contents__owner=board.owner.name
        span.show-contents__content=board.content
        if loggedInUser && board.owner._id == loggedInUser._id
            div.show-contents__btns
                a(href=`${board._id}/edit`) ‚úÇÔ∏è Edit contents
                a(href=`${board._id}/delete`) üóë Delete contents
        div.msg-info
            i.far.fa-comments.msg-logo
            span=sum
        form.show-contents__comment-form
            input(type="text", placeholder="Write a comment...", required).form-text
            button.form-button Submit
    ul.comments-lists
        each comment in comments
            +comments(comment) 
        script(src="/js/comment.js") 