include base
block content
    ul.user-lists
        each user in users
            li.user-lists__list
                a(href=`/users/${user._id}`)
                    img(src=`/${user.avatarUrl}`)
                    span=user.name
                form(method="POST", action=`/users/${user._id}/follow-confirm`)
                    input(type="submit", value="Accept", name="confirm")
                    input(type="submit", value="Decline", name="confirm")
